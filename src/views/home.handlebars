<div class="container mt-5">
  <h2 class="mb-2">Products List</h2>
  <table class="table table-striped border">
    <thead>
      <tr>
        <th class="bg-dark text-light text-center align-middle">Title</th>
        <th class="bg-dark text-light text-center align-middle">Product Code</th>
        <th class="bg-dark text-light text-center align-middle">Description</th>
        <th class="bg-dark text-light text-center align-middle">Category</th>
        <th class="bg-dark text-light text-center align-middle">Stock</th>
        <th class="bg-dark text-light text-center align-middle">Price</th>
        <th class="bg-dark text-light text-center align-middle">thumbnails</th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.code}}</td>
          <td>{{this.description}}</td>
          <td>{{this.category}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.price}}</td>
          <td>{{this.thumbnails}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>